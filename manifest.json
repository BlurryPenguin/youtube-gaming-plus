{
	"manifest_version": 2,
	"name": "YouTube Gaming Plus",
	"short_name": "YouTube Gaming+",
	"description": "Addons for YouTube Gaming",
	"author": "BlurryPenguin",
	"version": "0.0.1",
	"icons": {
		"16": "img/youtube+-icon-16x16.png",
		"48": "img/youtube+-icon-48x48.png",
		"128": "img/youtube+-icon-128x128.png"
	},
	"externally_connectable": {
		"matches": ["*://*.youtube.tv/*"]
	},
	"background": {
		"scripts": ["src/background.js", "src/settings.js"],
		"persistent": true
	},
	"content_scripts": [
		{
			"matches": ["*://*.youtube.com/watch?v=*"],
			"js": [
				"src/utils/jquery-2.1.4.min.js",
				"src/utils/devTools.min.js",
				"src/youtubeGamingPlus.js",
				"src/theme-manager.js",
				"src/chatAddons.js"
			]
		}
	],
	"options_page": "settings.html",
	"browser_action": {
		"default_icon": "img/youtube+-icon-128x128.png",
		"notification_icon": "img/youtube+-icon-180x180.png"
	},
	"permissions": ["activeTab", "tabs", "storage", "*://www.youtube.com/watch?v=*"],
	"web_accessible_resources": [
		"img/youtube+-icon-16x16.png",
		"img/youtube+-icon-48x48.png",
		"img/youtube+-icon-128x128.png",
		"img/youtube+-icon-180x180.png",
		"src/utils/jquery-2.1.4.min.js",
		"src/utils/devTools.min.js",
		"styles/base.css",
		"styles/channel.css"
	]
}
